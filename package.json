{
  "name": "jdparty",
  "version": "1.0.0",
  "private": true,
  "description": "Music-reactive DMX lighting control system",
  "author": "Joshua Pardhe",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "desktop": "pnpm --filter @jdparty/desktop dev",
    "server": "pnpm --filter @jdparty/server dev",
    "pwa": "pnpm --filter @jdparty/pwa dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
